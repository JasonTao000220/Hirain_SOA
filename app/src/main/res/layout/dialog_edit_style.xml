<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="1000dp"
    android:layout_height="490dp"
    android:background="@drawable/shape_dialog_circle_30"
    >

    <RelativeLayout
        android:layout_width="1000dp"
        android:layout_height="490dp">
    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="36sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp"
        android:textColor="#fff"
        android:text="@string/start_model"
        />

    <LinearLayout
        android:layout_marginTop="84dp"
        android:layout_below="@id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:layout_marginLeft="131dp"
        android:layout_marginRight="131dp"
        android:background="@drawable/shape_dialog_circle_23"
        android:paddingLeft="50dp"
        android:paddingRight="23dp"
        android:paddingTop="23dp"
        android:paddingBottom="23dp"
        >

        <EditText
            android:id="@+id/dialog_et"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="自定义模式名称"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textColorHint="@color/white_25"
            android:textSize="36sp"
            />
        <ImageView
            android:id="@+id/dialog_et_del"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_gravity="center"
            android:src="@mipmap/dialog_del"
            />




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/dialog_cancle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/dialog_cancle"
            android:textColor="@color/white"
            android:background="@drawable/shape_dialog_circle_left_30"
            android:textSize="32sp" />

        <TextView
            android:id="@+id/dialog_start"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/dialg_start"
            android:textColor="@color/white"
            android:background="@drawable/shape_dialog_circle_right_30"
            android:textSize="32sp"
            />
    </LinearLayout>
    </RelativeLayout>
</LinearLayout>
